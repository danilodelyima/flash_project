<p id="notice"><%= notice %></p>

<h1>Flashcards</h1>

<table>
  <thead>
    <tr>
      <th>Question</th>
      <th>Answer</th>
      <th>Correct</th>
      <th>Topic</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @flashcards.each do |flashcard| %>
      <tr>
        <td><%= flashcard.question %></td>
        <td><%= flashcard.answer %></td>
        <td><%= flashcard.correct %></td>
        <td><%= flashcard.topic %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>